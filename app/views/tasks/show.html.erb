<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>Completed?
<% if @task.completed %></p>
  <i class="far fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %>

<%= link_to 'Edit Task', edit_task_path %>
<%= link_to 'Delete Task', task_path(@task), method: :delete, data: {confirm: "Do you really want to delete this task?"} %>
<%= link_to 'All Tasks', tasks_path %>
